header.header
  .container
    .row.align-items-center
      .col-3
        .inner-logo
          a(href="/")
            img(src="/image/logo.webp", alt="Logo")

      .col-5
        .box-search
          form(
            action="/search/result"
            method="GET"
          )
            div(class="form-group d-flex mb-0")
              input(
                type="text"
                placeholder="Nhập từ khóa..."
                class="form-control"
                name="keyword"
                value=keyword
              )
              button(
                type="submit"
                class="btn btn-primary"
              ) Tìm
          .inner-suggest
            .inner-list 
      
      .col-4
        .inner-menu
          ul
            li
              a(href="/") Trang chủ
            li
              a(href="/topics") Chủ đề
            li
              a(href="/favorite-songs") Yêu thích

            if(user)
              li 
                  a(href="/user/logout") Đăng xuất
              li 
                  a(href="/user/info") #{user.fullName}
            else   
              li 
                  a(href="/user/register") Đăng kí
              li 
                  a(href="/user/login") Đăng nhập