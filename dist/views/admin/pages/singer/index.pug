extends ../../layouts/default.pug
include ../../mixins/pagination.pug
include ../../mixins/search.pug
include ../../mixins/filterStatus.pug
include ../../mixins/sort.pug
include ../../mixins/selection.pug

block main
  h1(class="mb-4") #{pageTitle}

  .card.mb-3 
    .card-header Bộ lọc và Tìm kiếm
    .card-body 
      .row 
        .col-6 
          +filter-status(filterStatus)
        .col-6 
          +search(keyword)

  .card.mb-3 
    .card-header Sắp xếp
    .card-body
      .row 
        .col-8 
          +sortSinger()

  .card.mb-3
      .card-header Danh sách ca sĩ
      .card-body
        .row
          .col-8
            +selection(`/${prefixAdmin}/singers/change-multi?_method=PATCH`)
          .col-4.text-right
            a(
              href=`/${prefixAdmin}/singers/create`
              class="btn btn-outline-success"
            ) + Thêm mới

        table(
          class="table table-hover table-sm"
          checkbox-multi
        )
          thead
            tr
              th 
                input(type="checkbox" name="checkall")
              th STT
              th Hình ảnh
              th Tên
              th Trạng thái
              th Hành động

          tbody
            each item, index in singers
              tr 
                td 
                  input(
                    type="checkbox"
                    name="id"
                    value=item.id
                  )
                td #{index+1}
                td
                  img(
                    src=item.avatar
                    alt=item.fullName
                    width="100px"
                    height="auto"
                  )
                td #{item.fullName}
                td
                  if (item.status === "active")
                    a(
                      href="javascript:;"
                      class="badge badge-success"
                      button-change-status
                      data-status="active"
                      data-id=item.id
                    ) Hoạt động
                  else
                    a(
                      href="javascript:;"
                      class="badge badge-danger"
                      data-status="inactive"
                      button-change-status
                      data-id=item.id
                    ) Dừng hoạt động
                td
                  a(
                    class="btn btn-secondary btn-sm"
                    href=`/${prefixAdmin}/singers/detail/${item.id}`
                  ) Chi tiết
                  a(
                    class="btn btn-warning btn-sm ml-1"
                    href=`/${prefixAdmin}/singers/edit/${item.id}`
                  ) Sửa
                  button(
                    class="btn btn-danger btn-sm ml-1"
                    button-delete
                    data-id=item.id
                  ) Xóa
  +pagination(pagination)
  form(
    action=""
    method="POST"
    id="form-change-status"
    data-path=`/${prefixAdmin}/singers/change-status`
  )
  form(
    action=""
    method="POST"
    id="form-delete"
    data-path=`/${prefixAdmin}/singers/delete`
  )
